{
  "name": "yelp-camp",
  "version": "1.0.0",
  "description": "YelpCamp v1 ",
  "main": "app.js ",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./app-with-typescript.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "author": "Jatin Kapur",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.1",
    "ejs": "^2.7.1",
    "express": "^4.17.1",
    "nodemon": "^1.19.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
